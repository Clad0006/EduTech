                        <td colspan="2">{{ Entreprises.adresse }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">{{ Entreprises.mail }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">{{ Entreprises.siteWeb }}</td>
                    </tr>
                </table>
            </li>
        </ul>
    {% endif %}
{% endblock %}