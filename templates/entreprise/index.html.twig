{% extends 'base.html.twig' %}

{% block form %}
    <form class="d-flex" role="search" action="{{ path('app_entreprise_index') }}" method="get">
        <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search" name="textRecherche" value="{{ textRecherche|default }}">
        <button class="btn btn-outline-success" type="submit">Rechercher</button>
    </form>
{% endblock %}

{% block title %}🏭 Entreprises{% endblock %}

{% block body %}
    {% if Entreprises|length > 1  %}
        <div class="entreprise_menu">
            <h1>LISTE DES ENTREPRISES</h1>
        </div>
        <ul class="liste_entreprises">
            {% for Entreprise in Entreprises %}
                <li class="ligne_entreprise">
                    <table class="donnees">
                        <thead>
                        <tr>
                            <th>Entreprise</th>
                            <th>Informations</th>
                            <th>Site</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td rowspan="2">{{ Entreprise.nomEnt }}</td>
                            <td>{{ Entreprise.adresse }}</td>
                            <td rowspan="2" class="link">
                                <a href="{{ Entreprise.siteWeb }}" target="_blank">
                                    <img class="link" src="{{ 'img/link.svg' }}" alt="Link icon">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td rowspan="2">{{ Entreprise.mail }}</td>
                        </tr>
                        </tbody>
                    </table>
                </li>
                <br>
                <br>
            {% endfor %}
        </ul>
    {% else %}
        <h1>Détails de l'entreprise</h1>
        <ul>
            <li>
                <table>
                    <thead>
                    <tr>
                        <th colspan="2">{{ Entreprises.nomEnt }}</th>
                    </tr>
                    </thead>
                    <tr>
                        <td colspan="2">{{ Entreprises.adresse }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">{{ Entreprises.mail }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">{{ Entreprises.siteWeb }}</td>
                    </tr>
                </table>
            </li>
        </ul>
    {% endif %}
{% endblock %}