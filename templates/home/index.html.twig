    </form>
{% endblock %}

{% block body %}
<style>
    body {background: url("{{ asset('img/background.png') }}") fixed center;background-size: cover}
</style>

<h1>Accueil</h1>
    <h1>Liste des recentes Offres</h1>
    <br>
    <div class="bloc_offres">
        {% for Offre in Offres %}
            {{ include('offre/_offre.html.twig') }}
        {% endfor %}
    </div>
{% endblock %}
