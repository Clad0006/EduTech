{% extends 'base.html.twig' %}

{% block icon %}🏠{% endblock %}
{% block title %}Accueil{% endblock %}
{% block background %}{{ asset('img/background.png') }}{% endblock %}

{% block form %}
    <form class="d-flex" role="search" action="{{ path('app_offre_index') }}" method="get">
        <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search" name="textRechercheEntreprise" value="{{ textRechercheEntreprise|default }}">
        <button class="btn btn-outline-success" type="submit">🔎</button>
    </form>
{% endblock %}

{% block body %}
    <h1>Accueil</h1>
    <h1>Liste des recentes Offres</h1>
    <br>
    <div class="bloc_offres">
        {% for Offre in Offres %}
            {{ include('offre/_offre.html.twig') }}
        {% endfor %}
    </div>
{% endblock %}
