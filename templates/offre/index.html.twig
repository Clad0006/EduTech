{% extends 'base.html.twig' %}

{% block title %}Hello OffreController!{% endblock %}

{% block body %}
    <h1>Liste des Offres</h1>
    <ul class="liste_offres">
        {% for Offre in Offres %}
            <li class="ligne_offre">
                <table class="offre">
                    <thead>
                        <tr>
                            <th>Recruteur·se</th>
                            <th>Entreprise</th>
                            <th>Jour</th>
                            <th>Place·s</th>
                            <th>Durée</th>
                            <th>Lieu</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ Offre.nomOffre }}</td>
                            <td>{{ Offre.getIDEntreprise() }}</td>
                            <td>{{ Offre.getJourDeb() }}</td>
                            <td>{{ Offre.nbPlace }}</td>
                            <td>{{ Offre.duree }} jours</td>
                            <td>{{ Offre.lieux }}</td>
                        </tr>
                        <tr>
                            <td colspan="6">{{ Offre.getDescrip() }}</td>
                        </tr>
                    </tbody>
                </table>
            </li>
            <br>
            <br>
        {% endfor %}
    </ul>
{% endblock %}
